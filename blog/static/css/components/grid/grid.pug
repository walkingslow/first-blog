  <cdx-test name="width percentage">
    <div class="ge-grid -padding--xs -stack--grid _test">
      <div class="ge-box -width--2of2">2 of 2</div>
      <div class="ge-box -width--3of3">3 of 3</div>
      <div class="ge-box -width--4of4">4 of 4</div>

      <div class="ge-box -width--1of2">1 of 2</div>
      <div class="ge-box -width--1of2">1 of 2</div>

      <div class="ge-box -width--1of3">1 of 3</div>
      <div class="ge-box -width--1of3">1 of 3</div>
      <div class="ge-box -width--1of3">1 of 3</div>

      <div class="ge-box -width--1of3">1 of 3</div>
      <div class="ge-box -width--2of3">2 of 3</div>

      <div class="ge-box -width--1of4">1 of 4</div>
