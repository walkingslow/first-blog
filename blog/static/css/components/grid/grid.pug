    </div>
  </cdx-test>

  <cdx-test name="grid GUTTER/PADDING sizes">
    <div class="ge-grid -gutter--xs -padding--xs _test">
      <div class="ge-box">XS/XS</div>
      <div class="ge-box">XS/XS</div>
