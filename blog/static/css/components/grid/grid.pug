      <div class="ge-box">horizontal (default)</div>
      <div class="ge-box">horizontal</div>
      <div class="ge-box">horizontal</div>
    </div>
    <br/>
    <div class="ge-grid -stack--vertical _test">
      <div class="ge-box">vertical</div>
      <div class="ge-box">vertical</div>
      <div class="ge-box">vertical</div>
    </div>
