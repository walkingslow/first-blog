      <div class="ge-box -width--2of4">2 of 4</div>

      <div class="ge-box -width--1of4">1 of 4</div>
      <div class="ge-box -width--3of4">3 of 4</div>
    </div>
  </cdx-test>

  <cdx-test name="width named">
    <div class="ge-grid -padding--xs -stack--grid _test">
      <div class="ge-box -width--xs">xs</div>
      <div class="ge-box -width--s">s</div>
      <div class="ge-box -width--m">m</div>
      <div class="ge-box -width--l">l</div>
      <div class="ge-box -width--xl">xl</div>
      <div class="ge-box -width--full">full</div>
    </div>
  </cdx-test>

  <cdx-test name="width mixing">
    <div class="ge-grid -padding--xs -stack--grid _test">
      <div class="ge-box -width--1of4">1 of 4</div>
      <div class="ge-box -width--xs">xs</div>
      <div class="ge-box">Just a box</div>
    </div>
  </cdx-test>

  <cdx-test name="width percentage gutter will adjust with -stack--vertical or -stack--horizontal">
    <div class="_test">
      <div class="ge-grid -gutter--xs -stack--horizontal">
        <div class="ge-box -width--1of3">1 of 3</div>
        <div class="ge-box -width--2of3">2 of 3</div>
      </div>
      <br/>
      <div class="ge-grid -gutter--xs -stack--vertical" style="height:30rem;width:20rem;">
        <div class="ge-box -width--1of3">1 of 3</div>
        <div class="ge-box -width--2of3">2 of 3</div>
      </div>
    </div>
  </cdx-test>

  <cdx-test name="Be Careful with GUTTER and -stack--grid">
    <span class="ge_font-color--gray-lighter-1">Using margin/gutter does not work with getting flex basis percentages to add up</span>
    <div class="_test">
      <div class="ge-grid -gutter--xs -stack--grid _test">
        <div class="ge-box -width--1of3">1 of 3</div>
        <div class="ge-box -width--2of3">2 of 3</div>
        <div class="ge-box -width--1of3">1 of 3</div>
        <div class="ge-box -width--xs">xs</div>
        <div class="ge-box">just a box</div>
      </div>
    </div>
    <span class="ge_font-color--gray-lighter-1">Use PADDING another box inside for it get the gutter effect of percentage layouts</span>
    <div class="_test">
      <div class="ge-grid -padding--xs -stack--grid">
        <div class="ge-box -width--1of3 _test"><div class="ge-box">1 of 3</div></div>
        <div class="ge-box -width--2of3 _test"><div class="ge-box">2 of 3</div></div>
        <div class="ge-box -width--1of3 _test"><div class="ge-box">1 of 3</div></div>
        <div class="ge-box -width--xs _test"><div class="ge-box">xs</div></div>
        <div class="ge-box _test"><div class="ge-box">just a box</div></div>
      </div>
    </div>
  </cdx-test>

  <cdx-test name="width percentage margin NON-GRID">
    <span class="ge_font-color--gray-lighter-1">Percentage layouts work for non-grid when they add up to 100% or have a box without width set to fill remaining space</span>
    <div class="ge-grid -padding--xs _test">
      <div class="ge-box -width--1of3">1 of 3</div>
      <div class="ge-box -width--2of3">2 of 3</div>
    </div>
    <span class="ge_font-color--gray-lighter-1">another example</span>
    <div class="ge-grid -padding--xs _test">
      <div class="ge-box -width--1of3">1 of 3</div>
      <div class="ge-box">Just a box</div>
    </div>
    <span class="ge_font-color--gray-lighter-1">Over 100% Percentage layouts do not work when not -stack--grid</span>
    <div class="ge-grid -padding--xs _test">
      <div class="ge-box -width--1of3">1 of 3</div>
      <div class="ge-box -width--2of3">2 of 3</div>
      <div class="ge-box -width--1of3">1 of 3</div>
      <div class="ge-box -width--xs">20</div>
      <div class="ge-box">just a box</div>
    </div>
    </div>
  </cdx-test>

