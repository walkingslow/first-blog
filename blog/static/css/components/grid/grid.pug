      <div class="ge-box">XS</div>
      <div class="ge-box">XS</div>
      <div class="ge-box">XS</div>
    </div>
    <div class="ge-grid -gutter--s _test">
      <div class="ge-box">S</div>
      <div class="ge-box">S</div>
      <div class="ge-box">S</div>
    </div>
    <div class="ge-grid -gutter--m _test">
      <div class="ge-box">M</div>
      <div class="ge-box">M</div>
      <div class="ge-box">M</div>
    </div>
    <div class="ge-grid -gutter--l _test">
      <div class="ge-box">L</div>
      <div class="ge-box">L</div>
      <div class="ge-box">L</div>
    </div>
  </cdx-test>

  <cdx-test name="grid PADDING sizes">
